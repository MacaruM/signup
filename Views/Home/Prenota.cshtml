@model DatiForm;

@{
    ViewData["Title"] = "Prenota";
}

<div class="text-center">
    <h1 class="display-4">Prenota</h1>
    <form class="m-2" method="post" asp-action="Conferma">
        <div class="form-group">
            <label asp-for=Nome>Inserisci il tuo Nome</label>
            <input asp-for=Nome type="text"  name="Nome" class="form-control w-50 mx-auto" >
        </div>
        <div class="form-group">
            <label asp-for=Cognome>Inserisci il tuo Cognome</label>
            <input asp-for=Cognome type="text"  name="Cognome" class="form-control w-50 mx-auto">
        </div>
        <div class="form-group">
            <label asp-for=Email>Inserisci la tua Email</label>
            <input asp-for=Email type="text"  Name="Email"class="form-control w-50 mx-auto">
        </div>
        <div class="form-group">
            <label asp-for=Sesso>Inserisci il tuo Sesso</label>
            <input asp-for=Sesso class="form-check-input" type="radio" value="Maschio" name="Sesso">
            <label asp-for=Sesso>Maschio</label> 
            <input asp-for=Sesso class="form-check-input" type="radio" value="Femmina" name="Sesso">
            <label asp-for=Sesso>Femmina</label> 
            <input asp-for=Sesso class="form-check-input" type="radio" value="Non mi esprimo" name="Sesso">
            <label asp-for=Sesso>Non mi esprimo</label> 
        </div>
         <div class="form-group">
            <label asp-for=DataDiNascita>Inserisci la tua Data di nascita</label>
            <input asp-for=DataDiNascita type="date"  Name="Data"class="form-control w-50 mx-auto">
        </div class="form-group">
            <select asp-for="Ruolo" class="form-select" name="Ruolo" required>
            <option value="" selected>Seleziona il tuo ruolo</option>
            <option value=Studente>Studente</option>
            <option value=Professore>Professore</option>
            <option value=Genitore>Genitore</option>
            </select>
        <div>

        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>
</div>
